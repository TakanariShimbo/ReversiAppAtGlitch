{
  "install": "pip3 install --user --upgrade pip && pip3 install --user -r requirements.txt",
  "start": "gunicorn --worker-class eventlet -w 1 server:app",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "^node_modules/"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "\\.html$",
        "\\.css$",
        "^start\\.sh"
      ]
    },
    "throttle": 1000
  }
}